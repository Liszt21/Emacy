#!/bin/sh

OLD_PWD=(pwd)
if [ $LEMACS ];then
    INSTALLED=true
else
    LEMACS=~/Apps/lemacs
fi
if [ $WSL_DISTRO_NAME ];then
    IN_WSL=true
fi
if [[ $USER == 'liszt' ]];then
    IS_ME=true
fi

install() {
    echo "Installing"
    if [ ! -d $LEMACS ];then
        if [ IN_WSL ] && [IS_ME] && [ -d /mnt/c/Liszt/Projects/Lemacs ];then
            ln -s /mnt/c/Liszt/Projects/Lemacs $LEMACS
        else
            git clone --recursive https://github.com/Liszt21/lemacs $LEMACS
        fi
    fi
    if [ -f ~/.emacs ];then
        mv ~/.emacs ~/.emacs.bak
    fi
    if [ ! -L ~/.emacs ];then
        ln -s $LEMACS/src/lemacs.el ~/.emacs
        ln -s $LEMACS/config/spacemacs ~/spacemacs
        ln -s $LEMACS/config/doomemacs ~/doomemacs
        ln -s $LEMACS/config/.doom.d ~/.doom.d
        ln -s $LEMACS/config/.spacemacs.d ~/.spacemacs.d
    fi
    if [ ! -f ~/.zshrc ];then
        PROFILE=~/.bashrc
    else
        PROFILE=~/.zshrc
    fi
    echo "source $LEMACS/src/entry" >> $PROFILE
}

clean() {
    echo "Clean"
    
    rm  ~/.emacs
    rm  ~/spacemacs
    rm  ~/doomemacs
    rm  ~/.doom.d
    rm  ~/.spacemacs.d
    # rm -rf $LEMACS
}

check() {
    if [ $INSTALLED ];then
        return
    fi
    install
}

update() {
    echo "Updating"
    # git pull origin master
    # git submodule init
    # git submodule update
    git submodule foreach git pull
}

check
cd $LEMACS

case $1 in
    C|clean)
        echo "clean"
        clean
        ;;
    I|install)
        echo "Install"
        install
        ;;
    D|doom)
        echo "Doom"
        $LEMACS/config/doomemacs/bin/doom $2
        ;;
    U|update)
        echo "Update"
        update
        ;;
    R|run)
        echo "Run "
        case $2 in
            [sS]pacemacs)
                echo "Spacemacs"
                emacs --with-profile spacemacs
                ;;
            [dD]oom)
                echo "Doom"
                emacs --with-profile doomemacs
                ;;
        esac
        ;;
    *)
        echo "Help"
        # update
        ;;
esac

cd $OLDPWD
 
